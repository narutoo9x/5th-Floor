<!DOCTYPE html>
<html>
	<head>
		<title>5Floor</title>
		<%= csrf_meta_tags %>

		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>

	<body>
		<nav class="navbar navbar-light bg-faded">
			<a class="navbar-brand" href="/">5Floor</a>
			<ul class="nav navbar-nav">
				<li class="nav-item">
					<%= link_to "Menu", menu_path, class: "nav-link #{'active' if request.original_fullpath == "/menu" }" %>
				</li>
				<li class="nav-item">
					<%= link_to "Contact US", contact_us_path, class: "nav-link #{'active' if request.original_fullpath == "/contact_us" }"%>
				</li>
			</ul>
			<div class="form-inline pull-xs-right">
				<%= form_tag(food_items_path, method: "get") do %>
					<%= text_field_tag :search, params[:search], placeholder: "Search for food", class: "form-control" %>
					<%= submit_tag 'Search', name: nil, class: "btn btn-outline-sucess" %>
				<% end %>
			</div>
		</nav>
		
		<div class="container">
			<%= yield %>
		</div>
	</body>
</html>
